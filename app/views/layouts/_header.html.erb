
<!-- Navbar -->
<div class="w3-top">
  <div class="w3-bar w3-red w3-card w3-left-align w3-large">
    <a class="w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large w3-red" href="javascript:void(0);" onclick="myFunction()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
    <%= link_to 'Home', root_path, class: "w3-bar-item w3-button w3-padding-large w3-white" %>
    <%= link_to 'Add vocabulary', terms_path, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" %>
    <%= link_to learning_path, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" do %>
      <i class="fas fa-check-double"></i> Review your vocabulary
    <% end %>
    <%= link_to 'Explore vocabulary', explore_path, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" %>
    <% if logged_in? %>
      <%= link_to 'Logout', session_path, method: :delete, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" %>
    <% else %>
      <%= link_to 'Sign Up', new_user_path, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" %>
      <%= link_to 'Log In', new_session_path, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" %>
    <% end %>
  </div>

  <!-- Navbar on small screens -->

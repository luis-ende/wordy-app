<div class="header">
  <h2>Log In</h2>
</div>
<%= form_with url: session_path, class: "users-form" do |f| %>
  <div class="input-container">
    <i class="fa fa-envelope icon"></i>
    <%= f.email_field :email, class: 'input-field', placeholder: 'E-Mail' %>
  </div>

  <div class="input-container">
    <i class="fa fa-key icon"></i>
    <%= f.password_field :password, class: 'input-field', placeholder: 'Password' %>
  </div>

  <%= f.submit 'Log in', class: 'btn' %>
<% end %>

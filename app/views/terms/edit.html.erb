<header>
  <h1>Edit Term</h1>
</header>
<%= form_with model: @term do |f| %>
  <%= f.text_field :term_text %>
  <div class="select">
    <%= f.collection_select(:category_id, Category.all, :id, :name,
                             class: 'select') %>
  </div>
  <%= f.button :button, type: :submit, class: 'item-button' do %>
    <i class="fas fa-save"></i>
  <% end %>
<% end %>

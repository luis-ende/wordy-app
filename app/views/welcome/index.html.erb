<!-- Header -->
<header class="w3-container w3-red w3-center" style="padding:128px 16px">
  <h1 class="w3-margin w3-jumbo">Welcome to the Wordy App!</h1>
  <% if logged_in? %>
    <p class="w3-xlarge"><%= "Hello #{current_user.name}!" %></p>
  <% end %>
  <%= button_to learning_path,
      class: "w3-button w3-black w3-padding-large w3-large w3-margin-top",
      method: :get do %>
    <i class="fas fa-check-double"></i> Start learning!
  <% end %>
</header>

<div class="w3-container w3-black w3-center w3-opacity w3-padding-64">
    <h1 class="w3-margin w3-xlarge">Word / Expression of the day: Kauderwelsch</h1>
</div>

<!-- First Grid -->
<div class="w3-row-padding w3-padding-64 w3-container">
  <div class="w3-content">
    <div class="w3-twothird">
      <h1>Last added words / expressions</h1>
      <h5 class="w3-padding-32">What's new at Wordy?</h5>
      <%= render 'last_terms' %>      
    </div>

    <div class="w3-third w3-center">
      <i class="fa fa-coffee w3-padding-64 w3-text-red w3-margin-right"></i>
    </div>
  </div>
</div>

<!-- Second Grid -->
<div class="w3-row-padding w3-light-grey w3-padding-64 w3-container">
  <div class="w3-content">
    <div class="w3-third w3-center">
      <i class="fa fa-anchor w3-padding-64 w3-text-red"></i>
    </div>

    <div class="w3-twothird">
      <h1>Last topics</h1>
      <h5 class="w3-padding-32">Recent words / expressions topics.</h5>

      <p class="w3-text-grey">Lorem ipsum dolor sit amet...</p>
    </div>
  </div>
</div>

<div class="w3-container w3-black w3-center w3-opacity w3-padding-64">
    <h1 class="w3-margin w3-xlarge">Last learned word: Kuddelmuddel</h1>
</div>
